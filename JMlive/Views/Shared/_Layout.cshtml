<!DOCTYPE html>
<html lang="en" ng-app="mainApp">
<head>
    <meta charset="utf-8" />
    <title>sample Admin Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/sample/css")
    @Styles.Render("~/Content/themes/sample/font-awesome/css")
    @Styles.Render("~/Content/themes/sample/weather-icons/css")


</head>
<body ng-controller="AppCtrl">
  
    @RenderBody()

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angularroute")
    @Scripts.Render("~/bundles/angular-animate")
    @Scripts.Render("~/bundles/App/Common/js")
    @Scripts.Render("~/bundles/App/js")
    @Scripts.Render("~/bundles/angular-ui")
    @Scripts.Render("~/bundles/angular-resource")
    @RenderSection("scripts", required: false)
</body>
</html>

